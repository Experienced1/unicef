<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unicef.repository.faq.FaqRepository">

    <insert id="save"
            parameterType="com.unicef.domain.Faq"
            useGeneratedKeys="true"
            keyProperty="faq_id"
    >
        insert into
        faq_mst(
        faq_id,
        category,
        faq_title,
        faq_detail,
        create_date,
        update_date
        )
        values(
        0,
        #{category},
        #{faq_title},
        #{faq_detail},
        now(),
        now()
        )
    </insert>

    <select id="getFaqList"
            parameterType="java.util.HashMap"
            resultType="com.unicef.domain.Faq">
        select
        faq_id,
        category,
        faq_title,
        faq_detail
        from
        faq_mst
    </select>

    <update id="setFaq" parameterType="com.unicef.domain.Faq">
        update
            faq_mst
        set
            category = #{category},
            faq_title = #{faq_title},
            faq_detail = #{faq_detail},
            update_date = now()
        where
            faq_id = #{faq_id}
    </update>
    
    <delete id="deleteFaq" parameterType="com.unicef.domain.Faq">
        delete
        from
            faq_mst
        where
            faq_id = #{faq_id}
    </delete>

</mapper>