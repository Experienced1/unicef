<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unicef.repository.donate.PaymentRepository">
    <resultMap id="donate_id" type="com.unicef.domain.Donate">
        <!-- 조인을 위함 Select 할 때 사용 -->
        <result property="donate_id" column="donate_id"></result>
        <result property="donate_name" column="donate_name"></result>
        <result property="donate_amount" column="donate_amount"></result>
        <result property="donate_area_id" column="donate_area_id"></result>
        <result property="donate_area" column="donate_area"></result>
        <result property="createDate" column="createDate"></result>
        <result property="updateDate" column="updateDate"></result>
    </resultMap>
    <insert id="donateInsert"
            parameterType="com.unicef.domain.Donate"
            useGeneratedKeys="true"
            keyProperty="donate_id"
    >
        insert into
        donate_mst
        values(
        0,
        #{donate_id},
        #{donate_type},
        #{donate_amount},
        #{donate_area_id}
        now(),
        now()
        )
    </insert>
</mapper>