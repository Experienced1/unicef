<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unicef.repository.account.AccountRepository">
    <resultMap id="role" type="com.unicef.domain.Role">
        <result property="role_id" column="role_id"></result>
        <result property="role" column="role"></result>
        <result property="role_name" column="role_name"></result>
    </resultMap>

    <resultMap id="user" type="com.unicef.domain.User">
        <result property="num_id" column="num_id"></result>
        <result property="role_id" column="role_id"></result>
        <result property="user_id" column="user_id"></result>
        <result property="oauth_username" column="oauth_username"></result>
        <result property="user_provider" column="user_provider"></result>
        <result property="user_pw" column="user_pw"></result>
        <result property="user_name" column="user_name"></result>
        <result property="user_phone" column="user_phone"></result>
        <result property="user_birthdate" column="user_birthdate"></result>
        <result property="user_email" column="user_email"></result>
        <result property="create_date" column="create_date"></result>
        <result property="update_date" column="update_date"></result>
    </resultMap>

    <insert id="save" parameterType="com.unicef.domain.User">
        insert into
            user_mst
        values(
            0,
            1,
            #{user_id},
            #{oauth_username},
            #{user_provider},
            #{user_pw},
            #{user_name},
            #{user_phone},
            #{user_birthdate},
            #{user_email},
            now(),
            now()
        );
    </insert>
    <select id="findUserByUserId" parameterType="String" resultType="com.unicef.domain.User">

    </select>
</mapper>